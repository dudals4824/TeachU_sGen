<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    tools:context=".AddBaby" >

    <TextView
        android:id="@+id/babyNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/babyName" 
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="41dp"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/babyPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:text="비밀번호"/>
    <EditText 
        android:id="@+id/password"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:ems="10"
        android:layout_below="@id/babyPassword"
       
    	/>
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/password"
       
        android:text="아기생일" />
       <DatePicker
       android:id="@+id/babyBirthday"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/textView3"
       android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/babyBirthday"
        android:text="성별" />

   <RadioGroup
       android:id="@+id/sexradiogroup"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       android:layout_below="@id/textView1"
       android:orientation="vertical" >

       <RadioButton
           android:id="@+id/radio_boys"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/textView1"
           android:layout_marginTop="14dp"
           android:text="@string/baby_boys" 
           android:textColor="#0000"/>

       <RadioButton
           android:id="@+id/radio_girls"
           android:layout_width="120dp"
           android:layout_height="wrap_content"
           android:layout_alignBaseline="@+id/radio_boys"
           android:layout_alignBottom="@+id/radio_boys"
           android:layout_toRightOf="@+id/radio_boys"
           android:text="@string/baby_girls" />
       
   </RadioGroup>
   <Button
        android:id="@+id/addbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sexradiogroup"
        android:layout_marginTop="16dp"
        android:text="아기 추가하기" />


   
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/imagescroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="0dp"
    android:layout_marginTop="0dp"
    android:padding="0dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_categorytree_float" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_categorytree_light" />

            <ImageView
                android:id="@+id/pic_categorytree_cloud3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/pic_categorytree_cloud3" />

            <ImageView
                android:id="@+id/pic_categorytree_cloud2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="150dp"
                android:src="@drawable/pic_categorytree_cloud2" />

            <ImageView
                android:id="@+id/pic_categorytree_spaceship2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="400dp"
                android:src="@drawable/pic_categorytree_spaceship2" />

            <ImageView
                android:id="@+id/pic_categorytree_cloud1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/pic_categorytree_cloud1" />

            <ImageView
                android:id="@+id/pic_categorytree_cloud5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/pic_categorytree_cloud5" />

            <ImageView
                android:id="@+id/pic_categorytree_yellowplantet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="800dp"
                android:src="@drawable/pic_categorytree_yellowplanet" />

            <ImageView
                android:id="@+id/pic_categorytree_mintplanet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="450dp"
                android:src="@drawable/pic_categorytree_mintplanet" />

            <ImageView
                android:id="@+id/pic_categorytree_spaceship1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="600dp"
                android:src="@drawable/pic_categorytree_spaceship1" />

            <ImageView
                android:id="@+id/pic_categorytree_cloud4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="650dp"
                android:src="@drawable/pic_categorytree_cloud4" />

            <Button
                android:id="@+id/btn_categorytree_object"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="420px"
                android:layout_marginTop="1710px"
                android:background="@drawable/object" />

            <Button
                android:id="@+id/btn_categorytree_fruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="405px"
                android:layout_marginTop="685px"
                android:background="@drawable/fruit" />

            <Button
                android:id="@+id/btn_categorytree_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="1240px"
                android:background="@drawable/animal" />

            <Button
                android:id="@+id/btn_categorytree_vegetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125px"
                android:layout_marginTop="355px"
                android:background="@drawable/vegetable" />
        </RelativeLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/bg_categorytree_bottomfloat" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/arrow" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_categorytree_setting" />

    <ImageView
        android:id="@+id/light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/pic_categorytree_light" />

</RelativeLayout>